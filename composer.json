{
  "name": "bondomvc/mvc",
  "description": "BondoMVC - A lightweight, modern PHP MVC framework for rapid web application development",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "BondoMVC Team",
      "email": "dev@bondomvc.com"
    }
  ],
  "require": {
    "php": ">=8.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.0"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/",
      "Core\\": "core/"
    },
    "files": [
      "core/Helpers.php"
    ]
  },
  "scripts": {
    "post-create-project-cmd": [
      "php -r \"copy('.env.example', '.env');\""
    ]
  },
  "exclude-from-dist": [
    "tests",
    ".git",
    ".gitignore",
    ".env.example",
    "phpunit.xml",
    "DOCS.md",
    "AUTH.md",
    "EXAMPLES.md",
    "TESTS.md",
    "README.md",
    "INSTALLATION.md",
    "INSTALL_MULTIPC.md",
    "DEMO_INSTALL.md",
    "FILE_UPLOAD_EMAIL.md",
    "SANS_COMPOSER.md",
    "PACKAGIST.md",
    "XAMPP.md",
    "CLEANUP.md"
  ],
  "extra": {
    "branch-alias": {
      "dev-main": "1.0-dev"
    }
  },
  "keywords": [
    "framework",
    "mvc",
    "php",
    "router",
    "lightweight"
  ],
  "homepage": "https://github.com/Josuebondo/mvc",
  "support": {
    "issues": "https://github.com/Josuebondo/mvc/issues"
  }
}
