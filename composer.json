{
  "name": "bondomvc/mvc",
  "description": "BondoMVC - A lightweight, modern PHP MVC framework for rapid web application development",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "BondoMVC Team",
      "email": "dev@bondomvc.com"
    }
  ],
  "require": {
    "php": ">=8.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.0"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/",
      "Core\\": "core/"
    },
    "files": [
      "core/Helpers.php"
    ]
  },
  "scripts": {
    "post-create-project-cmd": [
      "@setup-project"
    ],
    "setup-project": [
      "php -r \"copy('.env.example', '.env');\"",
      "@php console make:controller HomeController"
    ]
  },
  "extra": {
    "branch-alias": {
      "dev-main": "1.0-dev"
    }
  },
  "keywords": [
    "framework",
    "mvc",
    "php",
    "router",
    "lightweight"
  ],
  "homepage": "https://github.com/bondomvc/framework",
  "support": {
    "issues": "https://github.com/bondomvc/framework/issues"
  }
}
